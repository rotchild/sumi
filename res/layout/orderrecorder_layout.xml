<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/order_background"
    >
    <TextView
        android:id="@+id/monthTitle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        />
</RelativeLayout>    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/listsectionshape"
    >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     >
   <TextView
       android:id="@+id/orderlabel_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="加油"
       android:textSize="@dimen/mordertitle_size"
       android:textColor="@color/fuel_color"
       android:layout_alignParentLeft="true"
       />
    <TextView
       android:id="@+id/sum_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="200.00"
       android:textSize="@dimen/mordertitle_size"
       android:textColor="@color/black"
       android:layout_alignParentRight="true"
       />    
 </RelativeLayout>
  <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     >
   <TextView
       android:id="@+id/ordernum_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="11111111111"
       android:textSize="@dimen/default_size"
       android:textColor="@color/black"
       android:layout_alignParentLeft="true"
       />
    <TextView
       android:id="@+id/timestr_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="2016-12-22 12:33"
       android:textSize="@dimen/default_size"
       android:textColor="@color/black"
       android:layout_alignParentRight="true"
       />    
 </RelativeLayout>    
</LinearLayout>
</LinearLayout>
